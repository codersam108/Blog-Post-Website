<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Post</title>
</head>
<body>
    <%- include("Partials/header.ejs") %>
    <div class="min-vh-100">
        <div class="container my-5">
            <ul>
                <%if(posts.length==0){%>
                    <h1>No Posts To Delete!!</h1>
                <% }%>
                <% posts.forEach((post,index)=>{ %>
                    
                    
                    <li>
            <div class="row justify-content-center">
                <div class="content col-lg-8 col-12 p-4">
                        <h1><%=post.title%></h1>
                        <p><%=post.content%></p>
                    </div>
                    <div class="content col-lg-2 col-8 my-0 mx-4 p-4 text-center" style="height: 170px;">
                        <form action="/delete" method="POST">
                            <input type="text" name="postIndex" hidden="" value="0">
                            <input style="width: 85%;" class="btn btn-danger fs-5 btn-lg my-2 button-rad" type="submit" name="delete" value="Delete">
                        </form>
                        
                    </div>
                </div>
                </li>
                <hr>
                <% }); %>
                </ul>
            </div>
        </div>
                   
                    
                
    <%- include("Partials/footer.ejs") %>
</body>
</html>